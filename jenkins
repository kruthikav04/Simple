pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Jenkins automatically clones the public repo
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building the project..."
                // Add your build commands here
                sh "echo Build step executed"
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh "echo Tests executed"
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying..."
                sh "echo Deploy step executed"
            }
        }
    }
}
